{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "import/no-named-as-default": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "max-len": [2, {"code": 120, "ignoreUrls": true}],
    "global-require": 0,
    "no-param-reassign": ["error", { "props": false }],
    "new-cap": [2, {
      "capIsNewExceptions": [
        "Sequelize.ENUM",
        "Sequelize.INTEGER",
        "Sequelize.ARRAY",
        "Sequelize.STRING",
        "Sequelize.DECIMAL",
        "Sequelize.BIGINT",
        "Map",
        "List"
      ]
    }]
  },
  "plugins": [
    "standard",
    "react",
    "import"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
